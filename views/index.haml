:javascript
  $(document).ready(function(){
    $('body').addClass('rounded-container');
    $('body').addClass('bg-striped');
  });
#cards
  %ul.rounded
    -@cards.each do |card|
      %li
        %a{:href => "/cards/ban/#{card.id}"}= card.name

  %ul.rounded
    %li
      %a{:href=>'/refresh'}
        Refresh

  .rounded-header
    Banned Cards (tap to unban)
  %ul.rounded
    -@banned_cards.sort_by{|c|c.name}.each do |card|
      %li
        %a{:href=>"/cards/unban/#{card.id}"}= card.name

  .rounded-header
    Included Expansions (tap to exclude)
  %ul.rounded
    -@sources.sort.each do |source|
      %li
        %a{:href=>"/expansions/ban/#{source}"}= source

  .rounded-header
    Excluded Expansions (tap to include)
  %ul.rounded
    -@banned_sources.sort.each do |source|
      %li
        %a{:href=>"/expansions/unban/#{source}"}= source

  .rounded-header
    Starting Player
  %ul.rounded
    -1.upto(6) do |max_players|
      %li
        == #{max_players}-player game: Player #{starting_player(max_players)}
